<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="mvp.kting.com.zztmvp.activity.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="展示查询信息"/>

    <mvp.kting.com.zztmvp.widget.PullLoadRecyclerView
        android:id="@+id/pull_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView">

    </mvp.kting.com.zztmvp.widget.PullLoadRecyclerView>


    <mvp.kting.com.zztmvp.widget.CircularImageView
        android:id="@+id/setting_ivPhoto"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center|center_horizontal"
        android:gravity="center"
        android:padding="0dp"
        android:src="@drawable/ic_photo_default"
        app:border="false"
        app:border_color="#000000"
        app:border_width="0dp"
        app:selector="false"
        app:selector_stroke_color="#DDDDDD"
        app:selector_stroke_width="0dp"/>
</RelativeLayout>
